<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Hover Animation -->
    <Storyboard x:Key="ButtonHoverAnimation">
        <DoubleAnimation 
            Storyboard.TargetName="ButtonGrid"
            Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.1" Duration="0:0:0.15" />
        <DoubleAnimation 
            Storyboard.TargetName="ButtonGrid"
            Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.1" Duration="0:0:0.15" />
        <DoubleAnimation 
            Storyboard.TargetName="ButtonText" 
            Storyboard.TargetProperty="Opacity"
            To="1" Duration="0:0:0.2" />
    </Storyboard>

    <Storyboard x:Key="ButtonLeaveAnimation">
        <DoubleAnimation 
            Storyboard.TargetName="ButtonGrid"
            Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.0" Duration="0:0:0.1" />
        <DoubleAnimation 
            Storyboard.TargetName="ButtonGrid"
            Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.0" Duration="0:0:0.1" />
        <DoubleAnimation 
            Storyboard.TargetName="ButtonText" 
            Storyboard.TargetProperty="Opacity"
            To="0" Duration="0:0:0.2" />
    </Storyboard>
</ResourceDictionary>
